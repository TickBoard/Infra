project       = "sideproj-eks"
aws_region    = "ap-southeast-2"
aws_profile   = "root"
cluster_name  = "sideproj-eks"
k8s_version   = "1.30"
# GitHub OIDC role configuration (examples)
# Role name to create for GitHub Actions
github_role_name = "gha-deploy"

# Allowed GitHub OIDC subjects (any of the following patterns):
# - repo:OWNER/REPO:ref:refs/heads/main           # specific branch
# - repo:OWNER/REPO:pull_request                  # any PRs
# - repo:OWNER/REPO:environment:prod              # specific environment
# Replace OWNER/REPO with your repository
github_oidc_subjects = [
  # "repo:my-org/my-repo:ref:refs/heads/main",
]

